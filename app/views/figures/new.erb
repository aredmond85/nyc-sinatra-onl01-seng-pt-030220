<h2>Create New Figure</h2>

<!-- add content here -->

<form action="/figures" method="POST">
  <label for="figure_name">Name</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br>
  <label for="figure_titles"><h3>Titles</h3></label>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
    <% end %>

  <label for="new_title"><h3>Create New Title:</h3></label>
      <input type="text" id="new_title" name="title[name]">
    <br>

  <label for="figure_landmarks"><h3>Landmarks</h3></label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
  <% end %>

  <br>
  <h3>Create New Landmark:</h3>
    <label for="new_landmark">Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <label for="new_landmark_year">Year:</label>
    <input type="text" id="new_landmark_year" name="landmark[year_completed]">
    <br><br>

  <input type="submit" value="Create New Figure">

</form>

<br>
<a class="button" href="/figures">Figures</a>
